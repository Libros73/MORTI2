# ğŸ“† OBTENER EL DÃA ACTUAL
hoy = datetime.datetime.today().strftime("%A")  # Obtiene el dÃ­a en inglÃ©s
dias_traducidos = {
    "Monday": "Lunes",
    "Tuesday": "Martes",
    "Wednesday": "MiÃ©rcoles",
    "Thursday": "Jueves",
    "Friday": "Viernes",
    "Saturday": "SÃ¡bado",
    "Sunday": "Domingo"
}
dia_actual = dias_traducidos[hoy]  # Lo traduce al espaÃ±ol

# ğŸ“Œ OBTENER MORTIFICACIONES PARA HOY
mortificaciones_hoy = mortificaciones_fijas[dia_actual]

# Si no es domingo, agregamos 2 aleatorias
if dia_actual != "Domingo":
    mortificaciones_hoy += random.sample(mortificaciones_aleatorias, 2)

# ğŸ“© FORMATO DEL MENSAJE
mensaje = f"ğŸŒ¿ *Mortificaciones para hoy ({dia_actual}):* ğŸŒ¿\n"
for i, mortificacion in enumerate(mortificaciones_hoy, 1):
    mensaje += f"ğŸ‘‰ {mortificacion}\n"

# ğŸ“² ENVÃO DEL MENSAJE A WHATSAPP (CallMeBot)
numero = "+573058180027"  # ğŸ”¹ Cambia esto por tu nÃºmero de WhatsApp
