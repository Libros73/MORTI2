import random
import datetime
import requests

# 📌 MORTIFICACIONES FIJAS POR DÍA
mortificaciones_fijas = {
    "Lunes": ["No usar almohada", "No tomar café ni bebidas azucaradas"],
    "Martes": ["Usar calcetines de diferente color", "No escuchar música"],
    "Miércoles": ["Comer sin sal", "No usar redes sociales"],
    "Jueves": ["Dormir 30 min más tarde", "Beber solo agua todo el día"],
    "Viernes": ["Piedrita en el zapato", "Comer por separado"],
    "Sábado": ["No tomar refrescos", "No usar el ascensor"],
    "Domingo": ["Día de descanso, sin mortificaciones"]
}

# 📌 LISTA DE MORTIFICACIONES ALEATORIAS
mortificaciones_aleatorias = [
    "Rezar un misterio extra del Rosario",
    "No cruzar las piernas al sentarse",
    "Hablar menos y escuchar más",
    "No usar salsas en la comida",
    "Peinarse con un moño extraño",
    "Hacer un acto de caridad en secreto",
    "No quejarse en todo el día",
    "Escribir una carta de agradecimiento a Dios",
    "Leer un capítulo de la Biblia",
    "No usar espejos en todo el día"
]

# 📆 OBTENER EL DÍA ACTUAL
hoy = datetime.datetime.today().strftime("%A")  # Obtiene el día en inglés
dias_traducidos = {
    "Monday": "Lunes",
    "Tuesday": "Martes",
    "Wednesday": "Miércoles",
    "Thursday": "Jueves",
    "Friday": "Viernes",
    "Saturday": "Sábado",
    "Sunday": "Domingo"
}
dia_actual = dias_traducidos[hoy]  # Lo traduce al español

# 📌 OBTENER MORTIFICACIONES PARA HOY
mortificaciones_hoy = mortificaciones_fijas[dia_actual]

# Si no es domingo, agregamos 2 aleatorias
if dia_actual != "Domingo":
    mortificaciones_hoy += random.sample(mortificaciones_aleatorias, 2)

# 📩 FORMATO DEL MENSAJE
mensaje = f"🌿 *Mortificaciones para hoy ({dia_actual}):* 🌿\n"
for i, mortificacion in enumerate(mortificaciones_hoy, 1):
    mensaje += f"👉 {mortificacion}\n"

# 📲 ENVÍO DEL MENSAJE A WHATSAPP (CallMeBot)
numero = "+573058180027"  # 🔹 Cambia esto por tu número de WhatsApp
api_key = "5298266"  # 🔹 Obtén una API Key en CallMeBot.com
url = f"https://api.callmebot.com/whatsapp.php?phone={numero}&text={mensaje}&apikey={api_key}"

requests.get(url)  # Enviar mensaje

print("✅ Mensaje enviado:\n", mensaje)
